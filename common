syntax on
colorscheme default
set number
set scrolloff=3

" make backspace work
set backspace=indent,eol,start
" reload when changed on disk
set autoindent

" Command Bar
set laststatus=2

set ignorecase
set smartcase
set hlsearch

set expandtab
set shiftwidth=2
set tabstop=2
set ai
set nowrap

set nojoinspaces

let mapleader=","

map <leader>s :noh<CR>
map <leader>. xph
